Algoritmo "Exercicios da aula 06 calculando a idade"

 //Primeiro exercicio Calculando a idade

Var

   ano_atual, ano_nascimento, idade : INTEIRO



Inicio

   ESCREVA("Em que ano nos estamos? ")
   LEIA(ano_atual)
   ESCREVA("Em que ano voce nasceu? ")
   LEIA(ano_nascimento)

   idade <- ano_atual - ano_nascimento

   ESCREVA("Voce tem ", idade)
   
   
Fimalgoritmo